{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node src/server/index.ts",
    "lint": "tslint -c tslint.json 'pages/**/*.ts{,x}'",
    "tsc": "tsc -p tsconfig.json --noEmit",
    "build": "next build",
    "start": "next start"
  },
  "dependencies": {
    "@zeit/next-typescript": "^1.1.1",
    "express": "^4.17.1",
    "next": "^8.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "styled-components": "^4.2.0",
    "typescript": "^3.4.5"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/next": "^8.0.5",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/styled-components": "^4.1.15",
    "babel-plugin-styled-components": "^1.10.0",
    "fork-ts-checker-webpack-plugin": "^1.3.4",
    "prettier": "1.17.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.0.0"
  },
  "babel": {
    "presets": [
      "next/babel",
      "@zeit/next-typescript/babel"
    ],
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true
        }
      ]
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
